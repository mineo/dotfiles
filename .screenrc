#caption always "%{rw} * | %H * $LOGNAME | %{bw}%c %D | %{-}%-Lw%{rw}%50>%{rW}%n%f* %t %{-}%+Lw%<"
hardstatus alwayslastline 
#hardstatus string '[%H] %Lw%=%u %d.%m.%y %c '
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{B}%Y-%m-%d %{W}%c %{g}]'
#hardstatus string '%{= M} %H%{= G} %l %= %{= w}%-w%{+b r}%n*%t%{-b r}%{w}%+w %= %{c}%d %D %{B}%c '
setenv LC_CTYPE de_DE.utf8
defutf8 on

term screen-256color
termcapinfo xterm*|Eterm|mlterm|rxvt 'hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007'

altscreen on
vbell off
startup_message off
activity "%c activity -> %n%f %t"


##keybindings
bind -k k1 prev
bind -k k2 next
bind v screen -t 'vim' 5 vim
bind r screen -t 'rtorrent' 8 rtorrent
bind i screen -t 'irc' 9 irssi
