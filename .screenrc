#hardstatus string '[%H] %Lw%=%u %d.%m.%y %c '
#  hardstatus string '%{= M} %H%{= G} %l %= %{= w}%-w%{+b r}%n*%t%{-b r}%{w}%+w %= %{c}%d %D %{B}%c '
caption always "%{= KW}%-w%{= gW}%n %t%{-}%+w %-="
defutf8 on
altscreen on
bell_msg "bell in window %n"
vbell off
startup_message off
# display some useful info in the terminal title
termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
hardstatus off
hardstatus string "%t"
